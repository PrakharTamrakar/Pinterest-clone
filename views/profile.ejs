<% include ./partials/header.ejs %>
    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
        <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>
        <div class="profdets flex flex-col items-center mt-12">
            <div class="relative">
                <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                    <i class="text-zinc-800 ri-pencil-fill"></i>
                </span>
                <div class="w-28 h-28 bg-zinc-200 rounded-full overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
                </div>
            </div>
            <h1 class="text-2xl text-semibold mt-5"><%= user.name %></h1>
            <h3 class="text-md"><%= user.username %></h3>
            <!-- <a href="/edit" class="mt-3 px-5 py-2 bg-zinc-700 rounded-full text-sm font-normal">Edit </a> -->
            <a href="/add" class=" mt-5 font-semibold px-10 py-2 rounded-lg bg-red-700">Add New Post</a>
        </div>
        <div class="cards flex flex-wrap gap-10 mt-5 px-7" >
            <div class="card">
                <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover
                    "src="/public/images/uploads<%= user?.posts[0]?.image%>" alt="">
                </div>
                <a href='/show/posts' class="inline-block text-lg font-normal mt-3">Your uploaded Pins</a>
                <h6 class="text-sm font-normal opacity-60"><%= user.posts.length %> pins</h6>
            </div>
        </div>
    </div>

    <script>
        document.querySelector('#uploadicon').addEventListener('click',function(){
            document.querySelector('#uploadform input').click();
        })

        document.querySelector('#uploadform input').addEventListener('change', function(){
            document.querySelector('#uploadform').submit();
        })

    </script>

<% include ./partials/footer.ejs %>
